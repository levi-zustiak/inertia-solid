{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "noEmitOnError": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",
    "types": ["node", "solid-js"],

    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "declaration": true,
    "declarationDir": "types",

    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"]
}
